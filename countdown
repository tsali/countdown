#!/bin/sh

read -p "Minutes until next Event: " timer

secs=$(($timer * 60))
while [ $secs -gt 0 ]; do
   echo -ne "$secs\033[0K seconds until next event is due \r"
   sleep 1
   : $((secs--))
done

while true; do
        {
                sleep 1
                clear
                tput bel
                printf '



